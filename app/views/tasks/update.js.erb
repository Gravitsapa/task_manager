if ('<%=!@task.completed?%>' === 'true')
	$('#task_<%= @task.id %> .task__name').addClass('strikethrough');
else
	$('#task_<%= @task.id %> .task__name').removeClass('strikethrough');

$('#task_<%= @task.id %> .task__name').text('');
$('#task_<%= @task.id %> .task__name').text('<%= Task.find(@task).name %>');