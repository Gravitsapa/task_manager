if ('<%=@task.completed?%>' === 'true')
	$('#task_<%= @task.id %> .task-name').addClass('strikethrough');
else
	$('#task_<%= @task.id %> .task-name').removeClass('strikethrough');

$('#task_<%= @task.id %> .task-name').text('');
$('#task_<%= @task.id %> .task-name').text('<%= Task.find(@task).name %>');