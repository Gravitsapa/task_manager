<!DOCTYPE html>
<html>
<head>
  <title>TaskManager</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'datepicker.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'datepicker.min.js', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="page">
	<div class="page__head-line"></div>
	<header class="page__container">
		<div class="head">
			<div class="head__content">
				<div class="logo">
					<h3 class="logo__large-logo">Simple TODO list</h3>
					<h5 class="logo__small-logo">From Ryby Garage</h5>
				</div>
			</div>
		</div>
	</header>
	
	<main class="page__container">
		<%= yield %>
	</main>
	<footer class="page__container">
		<div class="footer">&copy Andrey Liapin</div>
	</footer>
</body>
</html>
